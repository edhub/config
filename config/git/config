[core]
    editor = hx
    # X don't clear screen when exit
    # F exit if one-screen
    # R retain color display
    pager = less -FXR

[user]
    name = Edward Gu
    email = edhroyal@gmail.com

[pull]
    rebase = true

# Special treat for rust update
[url "https://github.com/rust-lang"]
    insteadOf = "https://github.com/rust-lang"

# Use git protocal by default
[url "git@github.com:"]
    insteadOf = "https://github.com/"

[alias]
    st = status
    cm = commit
    cma = commit --amend
    br = branch -v
    cp = cherry-pick
    co = checkout
    df = diff -C
    dfc = diff --cached
    showl = show --name-status -C
    rmt = remote -v
